<div class="flex flex-col flex-grow justify-center items-center">
  <div class="relative py-10 border-2 border-color-gray sm:w-4/5 md:w-1/2 bg-white rounded flex flex-col items-center justify-center px-8 my-3">
      <h1 class="text-2xl text-gray-600 self-start font-semibold mb-4">Create new card</h1>
      <form id="create-card-form" action="" class="w-full flex flex-col justify-around my-3">
        <input id="card-question" type="text" placeholder="Enter question here" class="focus:outline-none focus:border-blue-700 border-b-2 border-gray-300 w-full">
        <input id="card-answer" type="text" placeholder="Enter answer here" class="focus:outline-none focus:border-blue-700 border-b-2 border-gray-300 my-8 w-full">
        <input id="card-category" type="text" placeholder="Enter category name here" class="focus:outline-none focus:border-blue-700 border-b-2 border-gray-300 w-full">
      </form>
      <div class="absolute bottom-2 right-6 mt-2 right-10">
        <button class="focus:border-2">
          <i class="far fa-eye fa-lg text-gray-600"></i>
        </button>
        <button>
          <i class="fas fa-check fa-lg mx-2 text-gray-600"></i>
        </button>
        <button>
          <i class="fas fa-trash-alt fa-lg text-gray-600"></i>
        </button>
      </div>
  </div>
</div>